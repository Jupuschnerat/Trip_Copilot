<div class='backgroundpattern'>
  <div class="container form p-4">
    <h2 class="peachtext p-1 mb-4"><strong>Build your route</strong></h2>

    <%= simple_form_for(@budget) do |f| %>
    <div class="row justify-content-center text-primary">
      <div class="col-8">
        <%= f.input :budget,
                    autofocus: true %>
      </div>
    </div>
    <div class="text-center">
      <div class="btn btn-success mt-4">
        <%= f.button :submit, "Create my Trip!" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
<div id="loadingpage" style="display: none;"></div>
