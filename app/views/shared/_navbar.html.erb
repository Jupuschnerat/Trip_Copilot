<div class="navbar navbar-expand navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand my-auto" do %>
      <%= image_tag 'logo.png', class: 'logo' %>
    <% end %>

    <div class="collapse navbar-collapse">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item my-auto mx-3">
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
          </li>
          <li class="nav-item my-auto mx-3">
            <%= link_to "Your Favorited Routes", favorites_path %>
          </li>

          <li class="nav-item">
          <a href="/users/edit" class="avatar my-auto">
             <%= image_tag current_user.image, class: "avatar" %>
          </a>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
